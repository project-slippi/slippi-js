{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/esm",
    "module": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2018",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "src/**/*.spec.ts"]
}
